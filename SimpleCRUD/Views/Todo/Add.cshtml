@{
}
@model SimpleCRUD.Models.Todo

@{
	ViewData["Title"] = "Add Todo Page";
}

<h1>Add Todo</h1>

<div class="container py-2">
	<form method="post" action="Add">
		<div class="mb-3">
			<label for="name" class="form-label">Name</label>
			<input type="text" class="form-control" id="name" asp-for="Title">
		</div>
		<div class="mb-3">
			<label for="displayname" class="form-label">Content</label>
			<textarea class="form-control" asp-for="Content"></textarea>
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-success">Add</button>
		</div>

	</form>
</div>