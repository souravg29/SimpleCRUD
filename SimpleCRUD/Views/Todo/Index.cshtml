@model List<SimpleCRUD.Models.Todo>
@{
	ViewData["Title"] = "Todo Page";
}

<div class="text-center">
	<h1>Simple CRUD Project</h1>
	<h1>This is Todo Page</h1>
	<a asp-controller="Todo" asp-action="Add" class="btn btn-success">Add Todo</a>
</div>


@if (Model is not null && Model.Any())
{
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Title</th>
				<th scope="col">Created Time</th>
				<th scope="col">Edit</th>
				<th scope="col">Delete</th>
			</tr>
		</thead>
		<tbody class="table-group-divider">
			@foreach (var todo in Model)
			{
				<tr>
					<td>@todo.Id</td>
					<td><a asp-action="Details" asp-route-id="@todo.Id" class="alert-link">@todo.Title</a></td>
					<td>@todo.CreatedAt</td>

					<td><a asp-controller="Todo" asp-action="Edit" asp-route-id="@todo.Id" class="btn btn-warning">Edit</a></td>
					<td><a asp-controller="Todo" asp-action="Remove" class="btn btn-danger" asp-route-id="@todo.Id">Delete</a></td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h1>No Todo Created Yet.</h1>
}
